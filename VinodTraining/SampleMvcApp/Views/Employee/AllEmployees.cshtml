@model List<SampleMvcApp.Models.Employee>

@{
    ViewBag.Title = "AllEmployees";
}

<h2 class="h1 jumbotron">List of Employees</h2>
<hr/>
<div class="nav navbar">
    @Html.ActionLink("AddNew","AddNew")
</div>
<div class="row">
    <div class="col-lg-10">

        <table class="table table-bordered table-hover">
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Employee Address</th>
                <th>Employee Salary</th>
                <th>Options</th>
            </tr>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.EmpID</td>
                    <td>@emp.EmpName</td>
                    <td>@emp.EmpAddress</td>
                    <td>@emp.EmpSalary</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = emp.EmpID })
                        @Html.ActionLink("Remove", "Delete", new { id = emp.EmpID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>